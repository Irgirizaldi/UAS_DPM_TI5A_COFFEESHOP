<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profilelogo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="coffee shop"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="585dp"
        android:background="@drawable/bagan">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="COLD COFFEE"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity="center"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="370dp"
                android:layout_height="130dp"
                android:background="@drawable/favorite">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:src="@drawable/milkshake"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Milkshake"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Rp 13.000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="60dp"/>

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/tambah"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="320dp"/>


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="220dp"
            android:padding="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="370dp"
                android:layout_height="130dp"
                android:background="@drawable/favorite">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:src="@drawable/expreso"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Coffee Expresso"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Rp 15.000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="60dp"/>

                <ImageView
                    android:id="@+id/tambah"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/tambah" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="400dp"
            android:padding="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="370dp"
                android:layout_height="130dp"
                android:background="@drawable/favorite">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:src="@drawable/cappucino"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Cappucino"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Rp 12.000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="60dp"/>

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/tambah"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="320dp"/>


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>




</LinearLayout>
