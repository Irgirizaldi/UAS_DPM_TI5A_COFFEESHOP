<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".KeranjangActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keranjang"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="X"
                    android:textColor="#D74922"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/profil"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="360dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/profile" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="336dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/bagankeranj">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kamu memiliki 4 item di keranjang"
                    android:textColor="#D74922"
                    android:gravity="center"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <View
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/border"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/milkshake" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Milkshake"
                        android:fontFamily="@font/regular"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="150dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="250ml"
                        android:textColor="#1F1E1E"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 25.000"
                        android:textColor="@color/merah"
                        android:fontFamily="@font/regular"
                        android:textSize="16sp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="80dp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <View
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/border"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:src="@drawable/caramel"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kopi Karamel"
                        android:fontFamily="@font/regular"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="150dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="500ml"
                        android:textColor="#1F1E1E"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 25.000"
                        android:textColor="@color/merah"
                        android:fontFamily="@font/regular"
                        android:textSize="16sp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="80dp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <View
                        android:layout_width="125dp"
                        android:layout_height="120dp"
                        android:background="@color/border"/>

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/expreso" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kopi Espresso"
                        android:fontFamily="@font/regular"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="150dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="250ml"
                        android:textColor="#1F1E1E"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 25.000"
                        android:textColor="@color/merah"
                        android:fontFamily="@font/regular"
                        android:textSize="16sp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="80dp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <View
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/border"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:src="@drawable/cappucino" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cappucino"
                        android:fontFamily="@font/regular"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="150dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="250ml"
                        android:textColor="#1F1E1E"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 25.000"
                        android:textColor="@color/merah"
                        android:fontFamily="@font/regular"
                        android:textSize="16sp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="80dp"/>



                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="336dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/bagankeranj">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Makin hemat pakai promo"
                    android:textColor="#D74922"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Harga"
                        android:fontFamily="@font/regular"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 125.000"
                        android:fontFamily="@font/regular"
                        android:textSize="24sp"
                        android:textColor="@color/merah"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:text="Beli"
                        android:fontFamily="@font/regular"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:background="@drawable/button"
                        android:layout_marginLeft="240dp"/>




                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>