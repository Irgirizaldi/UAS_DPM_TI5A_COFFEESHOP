<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:elevation="4dp"
    tools:context=".DashboardActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view6"
                    android:layout_width="wrap_content"
                    android:layout_height="185dp"
                    android:background="@drawable/bgshape"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="21dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/menu"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/profile"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="328dp"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi,"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="60dp"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Irgi Rizaldi"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="90dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="155dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/search"
                    android:elevation="6dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:background="@color/white"
                        android:drawableStart="@android:drawable/ic_btn_speak_now"
                        android:hint="Search..."
                        android:textColor="#8888"
                        android:textSize="14sp" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.334">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="60dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/menu1"
                    android:elevation="7dp"
                    android:gravity="center"
                    android:text="Hot Coffe"
                    android:textColor="#381202"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="88dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Cold Coffe"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="88dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Others"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view6"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bagan">


                        <ImageView
                            android:id="@+id/iv_kopi_cappucino"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/capucino"/>

                        <TextView
                            android:id="@+id/tv_title_harga"
                            android:layout_marginTop="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 15k"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_deskripsi_menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="120dp"
                            android:layout_marginLeft="20dp"
                            android:text="Cappucino"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/bagan">


                        <ImageView
                            android:id="@+id/iv_kopi_americano"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ameri"/>

                        <TextView
                            android:id="@+id/tv_harga"
                            android:layout_marginTop="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 15k"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_deskripsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="120dp"
                            android:layout_marginLeft="20dp"
                            android:text="Americano"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/teks_favorite"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/coklat"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/favorite">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/milkshake"
                        android:layout_marginRight="220dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tambah"
                        android:layout_marginLeft="330dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Milkshake"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/coklat"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20k"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/coklat"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="50dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/favorite">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:src="@drawable/expreso"
                        android:layout_marginRight="230dp"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tambah"
                        android:layout_marginLeft="330dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kopi Espresso"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/coklat"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18k"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/coklat"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="50dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/favorite">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:src="@drawable/caramel"
                        android:layout_marginRight="230dp"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tambah"
                        android:layout_marginLeft="330dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kopi Caramel"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/coklat"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="22k"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/coklat"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="50dp"/>

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</LinearLayout>